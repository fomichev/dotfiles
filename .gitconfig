[user]
	name = Stanislav Fomichev
	email = s@fomichev.me

[alias]
	a = add
	au = add -u :/
	b = branch
	bl = blame -w -s
	ca = commit --amend
	ci = commit -s
	co = checkout
	cp = cherry-pick
	dc = diff --cached
	d = diff
	fa = fetch --all
	f = fetch
	fp = format-patch --thread
	l = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lo = log --oneline
	lp = log -p
	pr = pull --rebase
	ra = rebase --abort
	rc = rebase --continue
	rd = range-diff
	ri = rebase --interactive
	rpo = remote prune origin
	sm = submodule
	s = show --pretty=fuller
	st = status -sb

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[sendemail]
	chainreplyto = false
	smtpserver = smtp.gmail.com:587
	smtpuser = sdf@fomichev.me
	smtpencryption = tls
	confirm = always

[format]
	coverletter = auto
	signOff = true

[merge]
	renamelimit = 0

[push]
	default = simple

[include]
	path = ~/local/.gitconfig
[core]
	abbrev = 12

[diff "default"]
	xfuncname = "^[[:alpha:]$_].*[^:]$"
