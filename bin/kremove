#!/bin/sh

if [ "x$1" = "x" ]; then
	version=`cat include/config/kernel.release`
else
	version=$1
fi

sudo rm -rf \
	/boot/initrd.img-$version \
	/boot/config-$version \
	/boot/System.map-$version \
	/boot/vmlinuz-$version \
	/lib/modules/$version

if [ ! "x$1" = "x-n" ]; then
	sudo update-grub
fi

