#!/bin/sh

[ "x$1" = "x-y" ] && { sudo pacman -Sy; }

echo "-> Installed: $(pacman -Q | wc -l)"

echo "-> Explicit : $(pacman -Qe | wc -l)"
[ "x$1" = "x-a" ] && { pacman -Qg; }

echo "-> Foreign  : $(pacman -Qm | wc -l)"
[ "x$1" = "x-a" ] && { pacman -Qm; }

orphans=$(pacman -Qdt | wc -l)
[ $orphans != "0" ] && {
	echo "-> Orphans  : $orphans";
	echo $(pacman -Qdt);
}

outdated=$(pacman -Qu | wc -l)
[ $outdated != "0" ] && {
	echo "-> Outdated : $outdated";
	echo $(pacman -Qu);
}
