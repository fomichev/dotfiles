#!/bin/bash

set -eo pipefail

export GOOGLE_PROJECT_ID=680984499942
export GOOGLE_APPLICATION_CREDENTIALS=$HOME/.secret/restic-google-storage
export RESTIC_PASSWORD_FILE="$HOME/.secret/restic"

REPO=${REPO:-gs:$(hostname -s):/}
ARGS=${ARGS:- --limit-upload 512}

finish() {
	/home/sdf/bin/systemd-email s@fomichev.me restic
}

do_rstc() {
	echo restic -r "$REPO" "$@"
	sudo -E restic -r "$REPO" "$@" 2>&1 | cat
}

if [ $# -eq 0 ]; then
	trap finish EXIT

	echo 'pull could data'
	[ -d $HOME/Drive ] && DRY=n $HOME/bin/cloud pull

	echo 'update timeliner'
	go get github.com/mholt/timeliner

	if [ -d $HOME/Pictures/Google ]; then
		echo 'timeliner get-latest'
		(cd $HOME/Pictures/Google && \
		/home/sdf/go/bin/timeliner get-latest google_photos/s@fomichev.me)
	fi

	do_rstc \
		--verbose \
		--verbose \
		$ARGS \
		--exclude-file $HOME/src/dotfiles/.restic-exclude \
		backup /

	do_rstc unlock

	do_rstc snapshots
	do_rstc forget --keep-last 5 --prune
	exit
fi

do_rstc "$@"
