#!/bin/bash

set -eo pipefail

source ~/.secret/restic-settings

say() {
	echo ">> $@" | $HOME/bin/colorify
}

if [ -z "$REPO" ]; then
	say '$REPO is not specified!'
	exit 1
fi

finish() {
	$HOME/bin/systemd-email s@fomichev.me restic
}

do_rstc() {
	say restic -r "$REPO" "$@"
	sudo -E restic -r "$REPO" "$@" 2>&1 | cat
}

system_upgrade() {
	say 'update system'
	$HOME/bin/aur
}

standard_notes() {
	local oldest_backup=$(find ~/Downloads/ -name 'Standard Notes *' -type f -printf '%T+ %p\n' | sort | head -n 1 | awk '{$1=""; print}')
	if [ -z "$oldest_backup" ]; then
		echo "Skipping notes backup!"
		return
	fi
	echo "Saving oldest notes backup: $oldest_backup"
	unzip -c "$oldest_backup" 'Standard Notes Backup and Import File.txt' | pass insert -mf notes
}

google_drive() {
	if [ -d $HOME/Drive ]; then
		say 'pull could data'
		DRY=n $HOME/bin/cloud pull
	fi
}

google_photos() {
	if [ -d $HOME/Pictures/Google ]; then
		say 'fetch google photos'
		gphotos-sync ~/Pictures/Google/
	fi
}

if [ $# -eq 0 ]; then
	trap finish EXIT

	standard_notes
	google_drive
	google_photos

	do_rstc \
		--verbose \
		--verbose \
		$ARGS \
		--exclude-file $HOME/src/dotfiles/.restic-exclude \
		backup /

	do_rstc unlock

	do_rstc snapshots
	do_rstc forget --keep-within 95d --prune
	do_rstc stats

	system_upgrade
	exit
fi

do_rstc "$@"
