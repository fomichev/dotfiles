#!/bin/bash

export GOOGLE_PROJECT_ID=680984499942
export GOOGLE_APPLICATION_CREDENTIALS=$HOME/gs-secret-restic-key.json

if [ $# -eq 0 ]; then
	set -- \
		--verbose \
		--limit-upload 128 \
		--exclude-file ~/src/dotfiles/.restic-exclude \
		backup /
fi

echo sudo -E restic -r "gs:$(hostname -s):/" "$@"
sudo -E restic -r "gs:$(hostname -s):/" "$@"
