#!/bin/bash

if [ $# -eq 0 ]; then
	set incoming update install orphaned foreign
fi

cd ~/src/aur

fn() {
	for d in $(ls -1); do
		echo "${d}:"
		(cd $d && eval "$@")
	done
}

foreign() {
	pacman -Qm
}

orphaned() {
	pacman -Rs $(pacman -Qqtd)
}

incoming_pkg() {
	git fetch
	git diff origin/$(git rev-parse --abbrev-ref HEAD) $(git rev-parse --abbrev-ref HEAD)
}

update_pkg() {
	git pull
}

install_pkg() {
	makepkg -si
}

incoming() { fn incoming_pkg; }
update() { fn update_pkg; }
install() { fn install_pkg; }

for f in "$@"; do
	echo "$f" | colorify
	$f
done
