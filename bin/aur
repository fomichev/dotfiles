#!/bin/bash

if [ $# -eq 0 ]; then
	set update orphaned foreign cleanup
fi

foreign() {
	pacman -Qm
}

orphaned() {
	sudo pacman -Rs $(pacman -Qqtd)
}

update() { yay; }

cleanup() {
	journalctl --vacuum-time=7d
	flatpak uninstall --unused
	pacman -Scc
}

for f in "$@"; do
	echo "$f" | colorify
	$f
done
