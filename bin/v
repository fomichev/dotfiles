#!/bin/bash

under_hg() {
	local ret=false

	pushd $(pwd) &>/dev/null
	while [ "$PWD" != "/" ]; do
		if [ -d ".hg" ]; then
			ret=true
			break
		fi
		if [ -d ".git" ]; then
			break
		fi
		cd ..
	done
	popd &>/dev/null

	echo $ret
}

if $(under_hg); then
	export HGCOLORS=16

	cmd="$1"
	shift

	case "$cmd" in
		init) hg citc $2; g4d $2 ;;
		reset) echo "use uncommit"; exit 1 ;;
		pr) exec sl pull --rebase -d master ;;
		lp) exec hg log --patch "$@" ;;
		au) exec hg amend ;;
		ri) exec hg histedit ;;
		ra) exec hg resolve --mark --all ;;
		rc) exec hg rebase --continue ;;
		rl) exec hg resolve --list ;;
		ec) exec hg evolve --continue ;;
		submit) exec jf submit ;;
		push) hg upload chain ;;
		stash)
			if [ "$2" = "pop" ]; then
				exec hg unshelve
			else
				exec hg shelve
			fi
			;;
		stash) exec hg shelve ;;
		*) exec hg "$cmd" "$@"
	esac
fi

exec git "$@"
