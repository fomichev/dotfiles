#!/bin/sh

if [ -z $COLOR ]; then
	case "$1" in
		# reg
		-r) color=1; shift ;;
		# green
		-g) color=2; shift ;;
		# yellow
		-y) color=3; shift ;;
		# blue
		-b) color=4; shift ;;
		# purple
		-p) color=5; shift ;;
		# cyan
		-c) color=6; shift ;;
		# yellow by default
		*) color=3 ;;
	esac
else
	color=$COLOR
fi

if [ -t 1 ]; then
	trap 'tput sgr0' 2 #SIGINT
	tput setaf $color
	cat
	tput sgr0
else
	cat
fi
