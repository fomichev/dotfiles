set realname = "Stanislav Fomichev"
set signature = ~/.mutt/signature

# threaded sort
set sort = threads

# check regulary
set timeout = 300
set mail_check = 300

# keep internal data in home dir
set header_cache = ~/.mutt/cache/
set message_cachedir = ~/.mutt/cache/
set certificate_file = ~/.mutt/certificates

# edit headers with mail
set edit_headers = yes

# sliently create messages with empty subject
set abort_nosubject = no

# ask for CCs
set askcc = yes

# be quiet please
set beep = no

# but beep about incoming messages
set beep_new = yes

# no help
#set help = no
set help = yes

# don't make new messages old upon mutt exit
set mark_old = no

# save attachments into home dir
macro attach s <save-entry><bol>~/

set move = no

# printer setup
set print = yes
set print_command="muttprint --printer TO_FILE:$HOME/mutt.ps"
set print_split = yes

source $alias_file
source ~/.mutt/bindings
source ~/.mutt/lists
source ~/local/.mutt/pwd # set imap_pass = '<password>'
source ~/.mutt/mutt-colors-solarized/mutt-colors-solarized-dark-16.muttrc
