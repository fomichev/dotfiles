set from = "s@fomichev.me"
set realname = "Stanislav Fomichev"

# imap setup
set imap_user = "s@fomichev.me"

set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Черновики"
set trash = "imaps://imap.gmail.com/[Gmail]/Trash"

# keep internal data in home dir
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates

# use vi-like bindings
bind index \Cd half-down
bind index \Cu half-up

# index shift-g - end
# index gg - home

# don't send messages with empty subject
set abort_nosubject = yes

# ask for CCs
set askcc = yes

# be quiet please
set beep = no

# but beep about incoming messages
set beep_new = yes

# no help
#set help = no
set help = yes
