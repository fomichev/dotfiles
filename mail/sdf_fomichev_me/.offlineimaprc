sep = " "
footer = "\n"

[Account sdf_fomichev_me]
localrepository = sdf_fomichev_me-local
remoterepository = sdf_fomichev_me-remote
autorefresh = 5
quick = 10
presynchook = imapfilter -c ~/.imapfilter.lua

[Repository sdf_fomichev_me-local]
type = Maildir
