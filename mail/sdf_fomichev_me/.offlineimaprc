folderfilter = lambda foldername: foldername in [ 'INBOX', '[Gmail].Drafts', '[Gmail].Spam', '[Gmail].Trash', '[Gmail].Sent Mail', 'platform-driver-x86', 'linux-kernel', 'arch', 'driverdev-devel' ]

[Repository x-remote]
