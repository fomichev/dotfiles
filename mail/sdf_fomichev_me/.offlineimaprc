[general]
pythonfile = ~/.offlineimap.py
accounts = x
fsync = false

[mbnames]
enabled = yes
filename = ~/.mail/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account x]
localrepository = x-local
remoterepository = x-remote
autorefresh = 5
quick = 10
presynchook = imapfilter -c ~/.imapfilter.lua

[Repository x-local]
type = Maildir
